FROM node:18 AS build
WORKDIR /app
COPY package.json package-lock.json ./
RUN npm ci --legacy-peer-deps
COPY . .

ARG BACKEND_URL
ARG REACT_APP_BACKEND_URL
ARG CORS_ORIGINS
ARG REACT_APP_WEYS_COLLECTION
ARG REACT_APP_MAGICEDEN_BASE
ARG REACT_APP_HELIUS_API_KEY
ARG MAGICEDEN_API_KEY
ARG QUARKUS_PROFILE

ENV BACKEND_URL=$BACKEND_URL
ENV REACT_APP_BACKEND_URL=$REACT_APP_BACKEND_URL
ENV CORS_ORIGINS=$CORS_ORIGINS
ENV REACT_APP_WEYS_COLLECTION=$REACT_APP_WEYS_COLLECTION
ENV REACT_APP_MAGICEDEN_BASE=$REACT_APP_MAGICEDEN_BASE
ENV REACT_APP_HELIUS_API_KEY=$REACT_APP_HELIUS_API_KEY
ENV MAGICEDEN_API_KEY=$MAGICEDEN_API_KEY
ENV QUARKUS_PROFILE=$QUARKUS_PROFILE

RUN npm run build

FROM node:18-alpine
WORKDIR /app
COPY --from=build /app/build ./build
RUN npm install -g serve
EXPOSE 3000
CMD ["serve","-s","build"]
